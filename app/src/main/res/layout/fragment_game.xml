<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".game.GameFragment"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_gameFragment_Watermelon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watermelon"
            android:textSize="30sp"
            android:textColor="#FCEA8B84"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_gameFragment_WatermelonScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#FCEA8B84"
            android:text="Alo"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="@id/textView_gameFragment_Watermelon"
            app:layout_constraintEnd_toEndOf="@id/textView_gameFragment_Watermelon"
            app:layout_constraintTop_toBottomOf="@id/textView_gameFragment_Watermelon"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_gameFragment_Durian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Durian"
            android:textSize="30sp"
            android:textColor="#FCEA8B84"
            android:layout_marginStart="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView_gameFragment_Watermelon"
            app:layout_constraintStart_toEndOf="@id/textView_gameFragment_Watermelon"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_gameFragment_DurianScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#FCEA8B84"
            android:text="Alo"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="@id/textView_gameFragment_Durian"
            app:layout_constraintEnd_toEndOf="@id/textView_gameFragment_Durian"
            app:layout_constraintTop_toBottomOf="@id/textView_gameFragment_Durian"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_gameFragment_score1_watermelon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="#FCEA8B84"
            android:text="+1"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/textView_gameFragment_Watermelon"
            app:layout_constraintEnd_toEndOf="@id/textView_gameFragment_Watermelon"
            app:layout_constraintTop_toBottomOf="@id/textView_gameFragment_WatermelonScore" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_gameFragment_score2_watermelon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="#FCEA8B84"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/button_gameFragment_score1_watermelon"
            app:layout_constraintEnd_toEndOf="@id/button_gameFragment_score1_watermelon"
            app:layout_constraintTop_toBottomOf="@id/button_gameFragment_score1_watermelon"
            android:layout_marginHorizontal="30dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_gameFragment_score3_watermelon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+3"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="#FCEA8B84"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/button_gameFragment_score2_watermelon"
            app:layout_constraintEnd_toEndOf="@id/button_gameFragment_score2_watermelon"
            app:layout_constraintTop_toBottomOf="@id/button_gameFragment_score2_watermelon"
            android:layout_marginHorizontal="30dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_gameFragment_score1_durian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="#FCEA8B84"
            android:text="+1"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/textView_gameFragment_Durian"
            app:layout_constraintEnd_toEndOf="@id/textView_gameFragment_Durian"
            app:layout_constraintTop_toBottomOf="@id/textView_gameFragment_DurianScore"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_gameFragment_score2_durian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="#FCEA8B84"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/button_gameFragment_score1_durian"
            app:layout_constraintEnd_toEndOf="@id/button_gameFragment_score1_durian"
            app:layout_constraintTop_toBottomOf="@id/button_gameFragment_score1_durian"
            android:layout_marginHorizontal="30dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_gameFragment_score3_durian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+3"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="#FCEA8B84"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/button_gameFragment_score2_durian"
            app:layout_constraintEnd_toEndOf="@id/button_gameFragment_score2_durian"
            app:layout_constraintTop_toBottomOf="@id/button_gameFragment_score2_durian"
            android:layout_marginHorizontal="30dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_gameFragment_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="#FCEA8B84"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/button_gameFragment_score3_watermelon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="90dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>